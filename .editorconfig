root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx,cjs}]
indent_size = 4
max_line_length = 180
quote_type = double
semi = true

[*.{json,yml,yaml}]
indent_size = 2
quote_type = double
semi = true

[*.{html,css,scss,less,md}]
indent_size = 4
